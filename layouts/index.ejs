<!DOCTYPE html>
<html class="html<%= frame ? " frame" : "" %>">
  <head>
    <title><%- title %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <% meta.map(({name, content}) => echo(`\n    <meta name="${escapeXML(name)}" content="${escapeXML(content)}">`)) _%>
    <%- "\n" + indent(resources.join("\n"), "    ", true) %>
  </head>
  <body nctx noselect>
    <% if (!frame) { _%><button id="nav-icon" role="button" aria-hidden="true" tabindex="1">
      <svg height="48px" width="48px" viewBox="2 2 20 20">
        <path fill="var(--accent-color)"
          d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-5.5-2.5l7.51-3.49L17.5 6.5 9.99 9.99 6.5 17.5zm5.5-6.6c.61 0 1.1.49 1.1 1.1s-.49 1.1-1.1 1.1-1.1-.49-1.1-1.1.49-1.1 1.1-1.1z" />
      </svg>
    </button>

    <iframe id="nav" src="/nav/"></iframe><% } %>

    <bg id="modal-bg">
      <modal id="modal">
        <label for="modal-input" id="modal-info"></label>
        <input ctx id="modal-input">
        <div id="modal-buttons"></div>
      </modal>
    </bg>

    <main>
      <%- indent(body, "      ") %>
    </main>
  </body>
</html>