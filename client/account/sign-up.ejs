<% title("Sign up to zSnout"), layout("form"), js("/account/sign-up/index.js") %>

<message unbox>Sign up for a zSnout account!</message>

<hr />

<desc><b>Username:</b> Your username must only contain letters, numbers, and underscores, and must not begin with a
  number.</desc>
<input ctx id="username" type="text" placeholder="Username" autocomplete="username" validate required
  pattern="^[A-Za-z_][A-Za-z0-9_]{4,15}$" minlength="5" maxlength="16" />

<desc><b>Email Address:</b> This must be your real email address!</desc>
<input ctx id="email" type="email" placeholder="Email Address" autocomplete="email" validate required />

<desc><b>Password:</b> Your password must contain at least 8 characters, one letter, and one number.</desc>
<input ctx id="password" type="password" placeholder="Password" autocomplete="new-password" validate required
  pattern="^.*([A-Za-z].*[0-9]|[0-9].*[A-Za-z]).*$" minlength="8" maxlength="512" />

<hr />

<input type="submit" value="Sign Up!" />

<message unbox>Or <a href="/account/log-in/">log in to an existing account</a>.</message>